{
  "compilerOptions": {
    "target": "ES2021",                
    "module": "CommonJS",             
    "lib": ["ES2021"],   
    "types": ["node"],              
    "outDir": "./dist",               
    "rootDir": "./src",               
    "strict": true,                   
    "esModuleInterop": true,          
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,            
    "moduleResolution": "node",
    "resolveJsonModule": true,        
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
